extend layout

html
head
	title Appreciation game for Global Courier Services
block header
	header Leaderboard
block content
	section#main
		h1 Leaderboards
		h3 Easy
		- var i = 1;
		table(style='width:70%')
			tr
				th
					strong Rank
				th 
					strong Username
				th 
					strong Score
			each s in ScoreEas
				tr
					td #{i++}
					td #{s.user}
					td #{s.Score}
		br
		h3 Normal
		- i =1;
		table(style='width:70%')
			tr
				th
					strong Rank
				th 
					strong Username
				th 
					strong Score
			each s in ScoreNorm
				tr
					td #{i++}
					td #{s.user}
					td #{s.Score}
		br
		h3 Hard
		-i = 1;
		table(style='width:70%')
			tr
				th
					strong Rank
				th 
					strong Username
				th 
					strong Score
			each s in ScoreHard
				tr
					td #{i++}
